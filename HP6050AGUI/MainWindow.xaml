<Window x:Class="HP6050AGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HP6050AGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Top Left Communuication panel-->
        <GroupBox Grid.Row="0"
                  Grid.Column="0"
                  Header="Communication">
            <Grid>
                <Label Content="Communication settings here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <!--Top Right Configuration panel-->
        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Header="Test Configuration">
            <Grid>
                <Label Content="Configuration settings here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <!--Bottom logging panel-->
        <GroupBox Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Header="Logging">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Duration (seconds):" Margin="0,0,2,2"/>
                <TextBox Grid.Column="1"
                         x:Name="durationBox"
                         PreviewTextInput="NumberValidationTextBox" Margin="2,0,2,2"/>
                <Button Grid.Column="2"
                        Grid.ColumnSpan="3"
                        x:Name="startLogButton"
                        Content="Start Logging" Margin="2,0,0,2"/>
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="3"
                         x:Name="pathBox"
                         IsEnabled="False" Margin="0,2,2,0"/>
                <Button Grid.Row="1"
                        Grid.Column="3"
                        x:Name="browseLogButton"
                        Content="Browse..." Margin="2,2,2,0"/>
                <Button Grid.Row="1"
                        Grid.Column="4"
                        x:Name="saveLogButton"
                        Content="Save" Margin="2,2,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
