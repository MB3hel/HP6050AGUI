<Window x:Class="HP6050AGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HP6050AGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Top Left Communuication panel-->
        <GroupBox Grid.Row="0"
                  Grid.Column="0"
                  Header="Communication">
            <Grid>
                <Label Content="Communication settings here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <!--Top Right Configuration panel-->
        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Header="Tests">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical">
                    <Button x:Name="quickTestBtn"
                            Margin="0,5,0,0"
                            Content="Start Quick Test"/>
                    <Button x:Name="slowDischargeBtn"
                            Margin="0,5,0,0"
                            Content="Start Slow Discharge Test"/>
                    <Button x:Name="stressTestBtn"
                            Margin="0,5,0,0"
                            Content="Start Stress Test"/>
                </StackPanel>
                <Button Grid.Row="1"
                        IsEnabled="False"
                        x:Name="cancelTestBtn"
                        Content="STOP TEST"
                        Foreground="Red"
                        FontWeight="Bold"/>
            </Grid>
        </GroupBox>
        <!--Bottom logging panel-->
        <GroupBox Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Header="Logging">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="1"
                         Grid.ColumnSpan="3"
                         x:Name="pathBox"
                         IsEnabled="False" Margin="0,2,2,0"/>
                <Button Grid.Row="1"
                        Grid.Column="3"
                        x:Name="browseLogButton"
                        Content="Browse..." Margin="2,2,2,0"/>
                <Button Grid.Row="1"
                        Grid.Column="4"
                        x:Name="saveLogButton"
                        Content="Save" Margin="2,2,0,0"/>
            </Grid>
        </GroupBox>
        <Label VerticalAlignment="Bottom"
               Grid.Row="2"
               x:Name="statusLabel"
               Margin="0"
               Padding="0"
               FontWeight="Bold"
               FontSize="10"
               Content="Test"/>
    </Grid>
</Window>
